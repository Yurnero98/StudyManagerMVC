@using MyMvcApp.Presentation.ViewModels.GroupViewModels
@model GroupEditViewModel

@{
    ViewData["Title"] = "Edit Group";
}

<h1>@ViewData["Title"]</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Group.GroupId" />

    <div class="mb-3">
        <label asp-for="Group.Name" class="form-label"></label>
        <input asp-for="Group.Name" class="form-control" />
        <span asp-validation-for="Group.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Group.CourseId" class="form-label">Course</label>
        <select asp-for="Group.CourseId" asp-items="Model.Courses" class="form-select">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="Group.CourseId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using MyMvcApp.Presentation.ViewModels.GroupViewModels
@model GroupDeleteViewModel

@{
    ViewData["Title"] = "Delete Group";
}

<h1>@ViewData["Title"]</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="mb-3">
    <p class="fw-bold">Are you sure you want to delete this group?</p>

    <dl class="row">
        <dt class="col-sm-2">Group ID</dt>
        <dd class="col-sm-10">@Model.GroupId</dd>

        <dt class="col-sm-2">Group Name</dt>
        <dd class="col-sm-10">@Model.GroupName</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.CourseName (ID: @Model.CourseId)</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GroupId" />
    <input type="hidden" asp-for="GroupName" />
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="CourseName" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
